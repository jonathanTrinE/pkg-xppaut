#!/usr/bin/make -f
# Sample debian/rules that uses debhelper.
# This file is public domain software, originally written by Joey Hess. 
# Edited by Isaac Jones for xppaut

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

export CFLAGS += -g -Wall
ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif

#Is this really necessary?
#ifneq (,$(shell perl -MConfig -e 'print $$Config{ptrsize} != $$Config{intsize};'))
#	MAKE += -f Makefile.64
#endif

build: build-stamp
build-stamp:
	dh_testdir

	QUILT_PATCHES=debian/patches quilt push -a || test $$? = 2

	# Compile the package.
	$(MAKE)

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp

	# Clean up after the build process.
	$(MAKE) clean

	QUILT_PATCHES=debian/patches quilt pop -a -R || test $$? = 2
	rm -rf .pc

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	# Install the package into debian/xppaut.
	$(MAKE) install DESTDIR=$(CURDIR)/debian/xppaut

	#Remove shared objects from example dir.
	rm -f $(CURDIR)/debian/xppaut/usr/share/doc/xppaut/examples/ode/*.so

# Nothing to do by default for build architecture-independent:
binary-indep: build install

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installdocs
	dh_installmenu
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
